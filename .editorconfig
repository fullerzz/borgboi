# EditorConfig is awesome: https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[*.tf]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[{*.json,*.jsonc}]
indent_style = space
indent_size = 2
